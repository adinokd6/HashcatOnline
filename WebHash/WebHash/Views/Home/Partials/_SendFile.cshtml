
@model WebHash.Models.ViewModels.SendFileViewModel

<div>
    @using (Html.BeginForm("SendFile", "Home", FormMethod.Post, new { id = "csvForm", enctype="multipart/form-data" }))
    {
        <div class="form-group">
            <label asp-for="UploadedFile" class="btn btn-primary text-center control-label label">Select file</label>
            <input type="file" asp-for="UploadedFile" />
        </div>
        <div class="form-group">
            <label asp-for="FileName" class="control-label label"></label>
            <textarea asp-for="FileName" class="form-control"></textarea>
        </div>
        <div class="submit" id="btnSubmit">
            <input type="submit" style="margin-top:16px" value="Upload" class="btn btn-primary text-center">
        </div>
    }
</div>

