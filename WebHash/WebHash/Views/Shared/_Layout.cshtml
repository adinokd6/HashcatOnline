<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Coded</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Dark Mode CSS -->
    <link href="https://cdn.jsdelivr.net/npm/halfmoon@1.1.1/css/halfmoon-variables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid" style="padding-left: 0px;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img style="width:50px; height:50px;" src="~/Images/logo.svg" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@(Url.Action("Index","Home"))">Hack</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@(Url.Action("SendFile","Home"))">AddFile</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <button class="btn btn-square" type="button" onclick="halfmoon.toggleDarkMode()">
                        <i class="fa-regular fa-moon" aria-hidden="true"></i>
                        <span class="sr-only">Toggle dark mode</span>
                    </button>
                </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Code - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/halfmoon@1.1.1/js/halfmoon.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@section Styles{
<style>
    .navbar-style {
        --primary-color-light: var(--indigo-color-light);
    }
</style>
}
